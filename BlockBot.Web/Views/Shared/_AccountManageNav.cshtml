@using BlockBot.Web.Data
@using BlockBot.Web.Views.Shared
@inject ApplicationSignInManager SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills nav-stacked">
    <li class="@AccountManageNavPages.IndexNavClass(ViewContext)"><a asp-controller="AccountManage" asp-action="Index">Profile</a></li>
    <li class="@AccountManageNavPages.ChangePasswordNavClass(ViewContext)"><a id="change-password" asp-controller="AccountManage" asp-action="ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li class="@AccountManageNavPages.ExternalLoginsNavClass(ViewContext)"><a id="external-login" asp-controller="AccountManage" asp-action="ExternalLogins">External logins</a></li>
    }
    <li class="@AccountManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"><a asp-controller="AccountManage" asp-action="TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class="@AccountManageNavPages.PersonalDataNavClass(ViewContext)"><a asp-controller="AccountManage" asp-action="PersonalData">Personal data</a></li>
</ul>
